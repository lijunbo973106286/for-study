<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.user.dao.AccountDao">

    <insert id="newsub">
        insert into scfp_user
        values (null, #{uname}, #{password}, #{name}, #{identity}, #{phonenum}, #{email}, #{enterprise_id}, #{status},
                #{fid})
    </insert>
    <update id="modsub">
        update scfp_user
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
            <if test="uname!='' and uname != null">
                uname = #{uname},
            </if>
            <if test="password!='' and password != null">
                password = #{password},
            </if>
            <if test="name!='' and name != null">
                `name` = #{name},
            </if>
            <if test="identity!='' and identity != null">
                `identity` = #{identity},
            </if>
            <if test="phonenum!='' and phonenum != null">
                phonenum = #{phonenum},
            </if>
            <if test="email!='' and email != null">
                email = #{email},
            </if>
            <if test="status!='' and status != null">
                `status` = #{status},
            </if>
        </trim>
    </update>
    <delete id="delsub">
        delete
        from scfp_user
        left join scfp_user_role on scfp_user.id = scfp_user_role.user_id
        where scfp_user.id = #{id}
    </delete>
    <select id="qrysub" resultType="com.woniuxy.user.entity.ScfpUser">
        select * from scfp_user
        <where>
            fid = #{fid}
            <if test="uname!='' and uname != null">
                and uname = #{uname}
            </if>
            <if test="name!='' and name != null">
                and `name` = #{name}
            </if>
            <if test="phonenum!='' and phonenum != null">
                and phonenum = #{phonenum}
            </if>
            <if test="email!='' and email != null">
                and email = #{email}
            </if>
            <if test="identity!='' and identity != null">
                and `identity` = #{identity}
            </if>
            <if test="status != '' and status != null">
                and status = #{status}
            </if>
        </where>
    </select>
</mapper>